datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String   @id @default(uuid())
  createAt      DateTime @default(now())
  firstName     String
  lastName      String
  email         String   @unique
  password      String
  status        Int
  emailVerified Int
  address       String
  phoneNumber   String
  token         Token[]
}

model Token {
  id          String   @id @default(uuid())
  token       String
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  type        String
  expires     DateTime
  blacklisted Boolean
}
